@font-face {
  font-family: 'HelveticaNeueCyr';
  src: url('../fonts/HelveticaNeueCyr-Roman.eot'); /* IE9 Compat Modes */
  src: url('../fonts/HelveticaNeueCyr-Roman.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
       url('../fonts/HelveticaNeueCyr-Roman.woff') format('woff'), /* Modern Browsers */
       url('../fonts/HelveticaNeueCyr-Roman.ttf')  format('truetype'), /* Safari, Android, iOS */
       url('../fonts/HelveticaNeueCyr-Roman.svg#4b1796169b99ef4b0ec06311a5319d71') format('svg'); /* Legacy iOS */

  font-style:   normal;
  font-weight:  400;
}

h1, h2, h3, h4
  font-family heading-font

h1
  font-size 1.5rem

.btn
  display inline-block
  text-decoration none
  border none
  outline none
  appearance none

.btn--login
  padding 10px 20px 7px
  height: 36px;

  font-family heading-font
  font-size 14px
  text-transform uppercase
  color #000000
  letter-spacing: 0.2px;

  border-radius 4px
  background-image linear-gradient(to bottom, rgba(255, 255, 255, 0.5), rgba(0, 0, 0, 0.5)), linear-gradient(#ffffff, #ffffff)

.btn--search
  height 48px
  padding 0 25px
  font-family heading-font
  letter-spacing 0.4px
  color #ffffff
  border-radius 3px
  background-color #258cd5


