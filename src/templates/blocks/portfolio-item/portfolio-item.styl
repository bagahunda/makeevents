.portfolio-grid
  margin 20px 0
  padding 0
  list-style none
  font-family monospace /* for spacing columns correctly */
  letter-spacing -.65em /* this too */
  margin-left -0.93em
  margin-right -0.93em
  text-align left /* center or justify for columns in last row */
  display block

  &__item
    margin-bottom 1.875em
    width 25%
    font-family base-font /* be sure to reset the font and letter-spacing */
    letter-spacing normal
    display inline-block
    padding-left 0.93em
    padding-right 0.93em
    position relative
    float none
    text-align left
    vertical-align top /* align row's columns top or baseline */

    @media screen and (max-width: 1200px)
      width 33.3333333%

    @media screen and (max-width: 850px)
      width 50%

    @media screen and (max-width: 600px)
      width 100%


.portfolio-card
  position relative
  box-shadow 0 1px 2px rgba(0,0,0,.15)
  transition all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)
  z-index 1

  &:after
    content ""
    border-radius 5px
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    box-shadow 0 5px 20px rgba(0,0,0,.15)
    opacity 0
    -webkit-transition all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)
    transition all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)
    z-index -1

  &:hover:after
    opacity 1

  &__image
    height: 173px;
    overflow hidden

    img 
      width: 100%

    a
      display block

    svg
      width: 63px;
      height: 63px;
      position: absolute;
      top: 0;
      bottom: 0;
      margin: calc((173px - 63px) / 2) auto;
      left: 0;
      right: 0;


  &__info
    padding: 15px 20px 20px;
    font-size 0.875em
    color text-color-grey

  &__title
    display block
    font-family heading-font
    font-size 1.25rem
    color text-color-base
    text-decoration none
    transition all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)

    &:hover
      text-decoration none

  &__price
    padding 0 20px
    color color-blue

  &__button-container
    padding: 20px;

    .btn
      width: 100%;
