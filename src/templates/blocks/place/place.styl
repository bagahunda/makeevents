.catalog

  &__hero-image--place
    width 595px

  &__map
    float right
    width 395px
    background red

.artist-profile

  .photo-tiles--place
    float left
    width 175px

.content-tables
  margin-bottom 60px

.content-title--bordered
  padding-bottom 18px
  border-bottom 1px solid #d8d8d8

.char-table
  width 50%
  float left

  & + &
    width calc(50% - 30px)
    float right

  td
    width 50%
    padding 20px 0
    border-bottom 1px solid #ebebeb

    &:nth-child(2)
      padding-left 30px

  .inner-row
    td
      border none
      padding 10px 0

      &:nth-child(2)
        padding-left 30px

.caption
  display block
  font-size 14px
  color text-color-grey

#eq-block
  .content-title
    margin 30px 0

  .eq-table + .content-title
    margin-top 65px

.eq-table
  width 100%

  th
    padding-bottom 7px
    text-align left
    font-weight normal
    color text-color-grey
    border-bottom 2px solid #d2d3d5

  td
    padding 15px 0
    border-bottom 1px solid #d2d3d5


