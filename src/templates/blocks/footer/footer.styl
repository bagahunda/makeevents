.footer
  padding-top 2.5em
  background-color #ffffff
  height 187px

  &__menu
    width 60%
    float left
    ul
      padding 0
      margin 0
      list-style none

      li
        display inline-block

        &:not(:last-child)
          margin-right 1.875em

    ul + ul
      margin-top 0.93em

  &__link-item
    font-size 0.875em
    color text-color-grey
    text-decoration none

  &__apps
    width 40%
    float right

  &__copy
    margin-top 2.5em
    font-size 0.875em

  .fa
    color #5a5a5a

.app-store-link
  margin-right 0.625em

.lang
  margin-top 1.25em
