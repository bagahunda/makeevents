.program-params
  margin-bottom: 20px;

  .u-text-grey
    margin-top: 15px;

.program-profile .content-title
  margin: 20px 0;

.section-title
    border-bottom: 1px solid #a8acae;
    text-transform: uppercase;

.program-price-block
  width: 50%;
  display: table-row;

  &__cell
    display: table-cell
    padding: 20px 40px 30px 0;

.equipment-table
  width: 100%;

  &__row
    display: table
    width: 100%
    table-layout: fixed;
    background-color: #fdfdfd;
    border-spacing: 0px 5px;

  &__or-row
    margin-top: -10px;
    position: relative

    &:after
      content: 'или'
      position: absolute;
      top: -10px;
      left: 50%;
      padding: 5px 10px;
      margin: 0 auto;
      background-color: #FDFDFD;
      font-size: 14px;
      font-weight: bold;
      color: #9b9b9b;

  &__cell
    display: table-cell
    padding: 0px 10px 15px 20px;
    border-top: solid 1px #e7e7e7;
    border-bottom: solid 1px #e7e7e7;

    &:last-child
      border-radius: 3px;
      border-right: solid 1px #e7e7e7;
      width: 10%;

    &:first-child
      border-radius: 3px;
      border-left: solid 1px #e7e7e7;
      width: 40%;


  &__hcell
    display: table-cell
    padding: 10px;
    border-bottom: solid 1px #d2d3d5;

    &:last-child
      width: 10%;

    &:first-child
      width: 40%;

.attached-documents

  &__item
    display table-row

    & *
      display: table-cell
      text-decoration: underline;
      border: none;
      vertical-align: middle;
      padding-right: 10px
      padding-right: 10px

.program-profile div, .program-profile p, .program-profile span, .program-profile a
  word-break: break-word;