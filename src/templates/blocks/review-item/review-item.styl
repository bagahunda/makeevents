.review-item

  &__name
    font-size: 16px;
    line-height: 1.14;
    display: inline-block

  &__name + .rating-stars
    margin: 5px 10px;
    display: inline-block;

  &__date
    display: block
    font-size: 14px;
    line-height: 1.14;
    margin-bottom: 10px;

  &__text
      word-break: break-word;
      font-size: 14px;


.review-item:not(:first-child)
  margin: 30px 0