font-size = 14px
line-height = 1.4
lines-to-show = 1

.card
  position relative
  box-shadow 0 1px 2px rgba(0,0,0,.15)
  transition all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)
  z-index 1
  height: 270px;

  &:after
    content ""
    border-radius 5px
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    box-shadow 0 5px 20px rgba(0,0,0,.15)
    opacity 0
    -webkit-transition all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)
    transition all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)
    z-index -1

  &:hover:after
    opacity 1

  a
    text-decoration none

  &__image
    height 173px
    overflow hidden

  &__info
    padding 0 0.93em 0
    margin-bottom 0.387em
    font-size 0.875em
    color text-color-grey

    .row
      display block
      display -webkit-box
      max-width 400px
      height font-size*line-height*lines-to-show
      margin 0 auto
      font-size font-size
      line-height line-height
      -webkit-line-clamp lines-to-show
      -webkit-box-orient vertical
      overflow hidden
      text-overflow ellipsis

  span.card__title
    display block
    height 20px*line-height*lines-to-show
    margin 0.425em 0 0.31em
    font-size 1.25rem
    color text-color-base

  &__price
    padding 0 0.93em 0.93em
    color color-blue

    span
      float left

  &__rating
    margin 0
    padding 0
    list-style none
    float right
    color #F3A536

    li
      display inline-block

.rating-stars
  margin 0
  padding 0
  list-style none
  color #F3A536

  li
    display inline-block