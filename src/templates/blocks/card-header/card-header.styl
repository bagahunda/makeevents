.card-header
  & span.grey-text
    display: block

  a
    text-decoration: none
    color: #4A90E2
    border-bottom: 1px solid #4A90E2

  &__info
    margin-bottom 0.687em
    float left

    & h1
      display: inline-block
      margin: 0.4em 0;
      color: black
      text-transform: uppercase

    & h1 + .rating-stars
      margin: 0.4em 10px;
      display: inline-block
    

  &__price
    float right

    & .price-info
      float: left


    & button.btn 
      float: right
      margin-left: 10px


.grey-text
  font-size 0.875em
  color text-color-grey
  
  

a.grey-text 
  text-decoration: none
  border-bottom: 1px solid text-color-grey

.bold-text
  font-family: 'PT Sans Caption'
  font-weight: 600
  font-size: 1.5rem;
  margin: 0.67em 0;