.card-header
  margin-bottom: 17px

  & span.u-text-grey
    display: block

  a
    text-decoration: none
    color: #4A90E2
    border-bottom: 1px solid #4A90E2

  &__info
    margin-bottom 0.687em
    float left

    & h1
      display: inline-block
      margin: 10px 0;
      line-height: 1;
      color: black
      text-transform: uppercase

    & h1 + .rating-stars
      margin: 0.4em 10px;
      display: inline-block
    

  &__price
    float right
    margin-top: 10px;

    & .price-info
      float: left
      margin-right: 10px;

      span.u-text-grey
          display: block;
          text-align: right;
      


    & button.btn 
      float: right
      margin-left: 10px
 
  

a.u-text-grey 
  text-decoration: none
  border-bottom: 1px solid text-color-grey

.big-bold-text
  font-family: 'PT Sans Caption'
  font-weight: 600
  font-size: 1.5rem;
  margin: 0.67em 0;

.reserve-btn
  width: 187px;
