
ul.card-tabs
  padding: 0
  margin-bottom: 20px;
  list-style-type: none
  overflow: hidden
  background-color: transparent
  border-bottom: 1px solid #d8d8d8;

ul.card-tabs li
  display: inline-block;
  padding: 10px 20px;
  padding-left: 0px;

  text-decoration: none
  text-transform: uppercase
  color: black
  -webkit-transition: 0.3s
  transition: 0.3s
  cursor: pointer;



ul.card-tabs li:focus,
ul.card-tabs li:hover,
ul.card-tabs li.active
  color: #4A90E2;


.tab-content
  display: none

.tab-content.active
  display: block

.content-title
  font-size: 20px;
  line-height: 1.15;
  letter-spacing: 0.4px;

.with-indent {
  margin: 20px 0;
}

.card-tabs-content

  .main-tabinfo-block
    width: calc(100% - 310px);
    display: inline-block;
    word-break: break-word;

    & p
      word-break: break-word;

  &__side-block
    width: 300px;
    display: inline-block;
    vertical-align: top;


.info-block {
    border: solid 1px #ececec;
    border-radius: 4px;
    padding: 42px 30px 14px 30px;
    margin-bottom: 40px;
}

/*rating block in left side*/
.sidebar-bordered-block
  padding: 20px;
  position: relative;
  margin-top: 11px;
  margin-left: 30px;
  border: solid 1px #ececec;
  border-radius: 4px;

  .heading-rate
    letter-spacing: -0.1px;
    text-align: center;
    color: #6d6d72;
    font-size: 13px;
    position: absolute;
    top: -10px;
    left: 0;
    right: 0;
    margin: 0 auto;
    display: inline-block;
    text-transform: uppercase;

    span
      padding: 5px 10px;
      background: #fff;

  .rate-number
    font-weight: 500;
    letter-spacing: -0.5px;
    color: #000000;
    font-size: 2.143em;
    font-family: 'SFUIText', Helvetica, Arial, sans-serif;

  .comment
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 auto;
    bottom: -10px;
    a
      padding: 5px 10px;
      text-decoration: none
      font-size: 13px;
      letter-spacing: -0.1px;

      background: #fff;
      color: #4A90E2


.sidebar-bordered-block:not(:first-child) {
  margin-top: 30px;
}

.reviews-button
  padding-top: 30px;
  width: 770px;

  a
    color: #4a90e2;
    font-size: 1rem;
    padding: 15px;
    border: solid 1px #ececec;
    border-radius: 4px;
    width: 100%;
    display: block;
    text-align: center;
    text-decoration: none


.catalog__hero-image
  width 820px
  height 310px
  float left
  overflow hidden

.photo-tiles
  margin: 0px;
  height: 310px;
  width 350px
  float right
  padding: 0 0 0 5px
  list-style-type: none
  overflow: hidden
  background-color: transparent
  font-size 0

  li
    display: inline-block
    width: 170px;
    height: 100px;
    margin-bottom 5px
    overflow: hidden
    position: relative

    &:not(:nth-child(2n))
      margin-right 5px

    &:nth-child(5),
    &:nth-child(6)
      margin-bottom 0

    .overlay
      background: rgba(0,0,0,0.8);
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;

      .text
        color: #fff;
        font-size: 1rem;
        display: inline-table;
        position: absolute;
        width: 100%;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;

  img
    width: 100%
    min-height: 100%;
    max-height: none

.tab-header
  font-weight bold
  color #000000
  text-transform uppercase
  min-height: 100%;

.main-photo
  max-width: 850px;
  min-height: 100%;
  width: 100%;
  height: auto;

.artist-profile div, .artist-profile p, .artist-profile span, .artist-profile a
  word-break: break-word;
